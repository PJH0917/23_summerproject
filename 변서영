#define _CRT_SECURE_NO_WARNINGS
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
#define N 41
int see();
int memorize();



int main(void){
   int a = 0;

   printf("***프로그램 용어 단어장***\n\n");
   printf("보기용을 보시려면 '1', 암기용를 보시려면 '2'를 눌러주세요.\n");
   scanf(" %d", &a);
   
   if (a == 1) {
      see();
   }
   else if (a == 2) {
      memorize();
   }
   else {
      while(1) {
         printf("'1'또는 '2' 둘 중에 하나를 골라주십시오.\n");
         scanf(" %d", &a);
         if (a == 1) {
            see();
            break;
         }
         else if (a == 2) {
            memorize();
            break;
         }
       } 
   }
   return 0;
}


